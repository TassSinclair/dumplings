<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/simple_dumpling"
        android:label="@string/applicationName"
        android:supportsRtl="true"
        android:theme="@style/Theme.Dumplings"
        tools:targetApi="31">
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/Theme.AppCompat.Light"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.RatingsActivity"
            android:theme="@style/Theme.AppCompat.Light"
            android:label="@string/ratingsAndRatiosLabel"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".activity.MainActivity">
        </activity>
        <activity
            android:name=".activity.SpecificServingsActivity"
            android:theme="@style/Theme.AppCompat.Light"
            android:label="@string/specificServingsLabel"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName=".activity.MainActivity">
        </activity>
        <activity
            android:name=".activity.YourOrderActivity"
            android:theme="@style/Theme.AppCompat.Light"
            android:label="@string/yourOrderName"
            android:parentActivityName=".activity.MainActivity">
        </activity>
        <activity
            android:name=".activity.AboutActivity"
            android:theme="@style/Theme.AppCompat.Light"
            android:label="@string/aboutName"
            android:parentActivityName=".activity.MainActivity">
        </activity>
    </application>

</manifest>