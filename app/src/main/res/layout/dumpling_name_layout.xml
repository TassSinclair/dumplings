<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:padding="8dp"
              android:id="@+id/dumplingNameLayout"
            >
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/dumplingImage"
            android:src="@drawable/simple_dumpling"
            android:importantForAccessibility="no"
            android:layout_marginRight="8dp"
            />
    <net.sinclairstudios.dumplings.widget.ListenerTrackingEditTextView
            android:theme="@style/Theme.AppCompat.Light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:editable="false"
            android:clickable="false"
            android:capitalize="words"
            android:hint="@string/dumplingTypeHint"
            android:imeOptions="actionDone"
            android:completionThreshold="1"
            android:singleLine="true"
            android:textSize="22sp"
            android:id="@+id/dumplingNameEditText"
            android:layout_weight="1">
        <requestFocus/>
    </net.sinclairstudios.dumplings.widget.ListenerTrackingEditTextView>
</LinearLayout>